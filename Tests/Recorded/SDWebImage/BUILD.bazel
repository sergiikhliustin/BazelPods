# Add a config setting release for compilation mode
# Assume that people are using `opt` for release mode
# see the bazel user manual for more information
# https://docs.bazel.build/versions/master/be/general.html#config_setting
config_setting(
  name = "release",
  values = {
    "compilation_mode": "opt"
  }
)
apple_framework(
  name = "SDWebImage",
  module_name = "SDWebImage",
  bundle_id = "org.cocoapods.SDWebImage",
  link_dynamic = True,
  testonly = False,
  infoplists = [
    ":SDWebImage_InfoPlist"
  ],
  platforms = {
    "ios": "10.0"
  },
  srcs = glob(
    [
      "SDWebImage/Core/*.h",
      "SDWebImage/Core/*.m",
      "SDWebImage/Private/*.h",
      "SDWebImage/Private/*.m",
      "WebImage/SDWebImage.h"
    ],
    allow_empty = True
  ),
  private_headers = glob(
    [
      "SDWebImage/Private/*.h"
    ],
    allow_empty = True
  ),
  deps = [
    ":SDWebImage_SDWebImage_Bundle"
  ],
  objc_defines = [
    "COCOAPODS=1"
  ] + select(
    {
      "//conditions:default": [
        "POD_CONFIGURATION_DEBUG=1",
        "DEBUG=1"
      ],
      ":release": [
        "POD_CONFIGURATION_RELEASE=1"
      ]
    }
  ),
  swift_defines = [
    "COCOAPODS"
  ] + select(
    {
      "//conditions:default": [
        "DEBUG"
      ]
    }
  ),
  sdk_frameworks = [
    "ImageIO",
    "Accelerate",
    "CoreGraphics",
    "CoreImage",
    "CoreServices",
    "CoreVideo",
    "MobileCoreServices",
    "QuartzCore"
  ],
  visibility = [
    "//visibility:public"
  ]
)
precompiled_apple_resource_bundle(
  name = "SDWebImage_SDWebImage_Bundle",
  bundle_id = "org.cocoapods.SDWebImage",
  bundle_name = "SDWebImage",
  infoplists = [
    ":SDWebImage_SDWebImage_Bundle_InfoPlist"
  ],
  resources = glob(
    [
      "WebImage/PrivacyInfo.xcprivacy"
    ],
    allow_empty = True
  )
)
